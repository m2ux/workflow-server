{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "workflow",
  "description": "Workflow definition schema - orchestrates activities",
  "$ref": "#/definitions/workflow",
  "definitions": {
    "variable": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array", "object"]
        },
        "description": {
          "type": "string"
        },
        "defaultValue": {},
        "required": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    "mode": {
      "type": "object",
      "description": "Defines a workflow execution mode that modifies standard behavior",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this mode"
        },
        "name": {
          "type": "string",
          "description": "Human-readable mode name"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of mode behavior"
        },
        "activationVariable": {
          "type": "string",
          "description": "Variable name that activates this mode when true"
        },
        "recognition": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Patterns to detect mode activation from user intent"
        },
        "skipActivities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Activity IDs to skip entirely in this mode"
        },
        "defaults": {
          "type": "object",
          "additionalProperties": {},
          "description": "Default variable values when mode is active"
        },
        "resource": {
          "type": "string",
          "description": "Path to resource file with detailed mode guidance"
        }
      },
      "required": ["id", "name", "activationVariable"],
      "additionalProperties": false
    },
    "artifactLocation": {
      "type": "object",
      "description": "Defines a named artifact storage location referenced by activity artifacts",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path pattern for this location. Supports workflow variable interpolation (e.g., '{planning_folder_path}')"
        },
        "description": {
          "type": "string",
          "description": "Description of what artifacts this location stores"
        },
        "gitignored": {
          "type": "boolean",
          "default": false,
          "description": "Whether artifacts in this location are gitignored from the host project"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    },
    "workflow": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "description": "Unique workflow identifier"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "title": {
          "type": "string",
          "description": "Human-readable workflow title"
        },
        "description": {
          "type": "string",
          "description": "Detailed workflow description"
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Rules that govern workflow execution"
        },
        "variables": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/variable"
          },
          "description": "Workflow-level variables"
        },
        "modes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mode"
          },
          "description": "Execution modes that modify standard workflow behavior"
        },
        "artifactLocations": {
          "type": "object",
          "description": "Named artifact storage locations. Keys are location identifiers referenced by activity artifact definitions (e.g., 'planning'), values define path patterns and metadata.",
          "additionalProperties": {
            "$ref": "#/definitions/artifactLocation"
          }
        },
        "initialActivity": {
          "type": "string",
          "description": "ID of the first activity to execute. Required for sequential workflows, optional when all activities are independent entry points."
        }
      },
      "required": ["id", "version", "title"],
      "additionalProperties": false
    }
  }
}
