{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "workflow",
  "description": "Workflow definition schema - orchestrates activities",
  "$ref": "#/definitions/workflow",
  "definitions": {
    "variable": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array", "object"]
        },
        "description": {
          "type": "string"
        },
        "defaultValue": {},
        "required": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    },
    "workflow": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "description": "Unique workflow identifier"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version"
        },
        "title": {
          "type": "string",
          "description": "Human-readable workflow title"
        },
        "description": {
          "type": "string",
          "description": "Detailed workflow description"
        },
        "author": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Rules that govern workflow execution"
        },
        "variables": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/variable"
          },
          "description": "Workflow-level variables"
        },
        "initialActivity": {
          "type": "string",
          "description": "ID of the first activity to execute. Required for sequential workflows, optional when all activities are independent entry points."
        },
        "activities": {
          "type": "array",
          "items": {
            "$ref": "activity.schema.json"
          },
          "minItems": 1,
          "description": "Activities that comprise this workflow. Activities with transitions form sequences; activities without transitions are independent entry points."
        }
      },
      "required": ["id", "version", "title", "activities"],
      "additionalProperties": false
    }
  }
}
